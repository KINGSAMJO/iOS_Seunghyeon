<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.kr.sopt_seminar_30th">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.App"
        android:allowBackup="true"
        android:icon="@mipmap/sopt_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/sopt_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.SOPT_Seminar_30th"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".presentation.ui.onboarding.OnBoardingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.ui.detail.DetailActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.home.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.auth.SignUpActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".presentation.ui.auth.SignInActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>